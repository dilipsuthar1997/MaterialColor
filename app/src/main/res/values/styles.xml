<resources>

    <!-- Base application theme -->
    <!-- Light Theme -->
    <style name="MaterialColor.Base.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryDark">@color/colorSecondaryDark</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="statusBarColor">@color/statusBarColor</item>
        <item name="appBarColor">@color/appBarColor</item>
        <item name="cardDialogColor">@color/cardDialogColor</item>
        <item name="tabUnselectedColor">@color/tabUnselectedColor</item>
        <item name="tabBgColor">@color/tabBgColor</item>

        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:navigationBarColor">@color/appBarColor</item>   <!-- Navigation btn color -->
        <item name="colorControlActivated">@color/colorPrimary</item>   <!-- Active widget color -->
        <item name="colorControlHighlight">@color/ripple_color</item>   <!-- Ripple color -->

        <item name="md_color_button_text">@color/colorPrimary</item>
    </style>

    <!-- Dark Theme -->
    <style name="MaterialColor.Base.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorSecondary">@color/colorSecondary_dark</item>
        <item name="colorSecondaryDark">@color/colorSecondaryDark_dark</item>
        <item name="colorTextPrimary">@color/colorTextPrimary_dark</item>
        <item name="colorTextSecondary">@color/colorTextSecondary_dark</item>
        <item name="statusBarColor">@color/statusBarColor_dark</item>
        <item name="appBarColor">@color/appBarColor_dark</item>
        <item name="cardDialogColor">@color/cardDialogColor_dark</item>
        <item name="tabUnselectedColor">@color/tabUnselectedColor_dark</item>
        <item name="tabBgColor">@color/tabBgColor_dark</item>

        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:navigationBarColor">@color/appBarColor_dark</item>
        <item name="colorControlActivated">@color/colorPrimary_dark</item>
        <item name="colorControlHighlight">@color/ripple_color</item>

        <item name="md_color_button_text">@color/colorPrimary_dark</item>
    </style>
    
    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Large.Bold" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- tooltip custom style -->
    <style name="ToolTipAltStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">16dp</item>
        <item name="ttlm_backgroundColor">@color/colorPrimary</item>
        <item name="ttlm_cornerRadius">6dp</item>
        <item name="ttlm_arrowRatio">1.2</item>
        <item name="ttlm_textStyle">@style/ToolTipAltTextStyle</item>
    </style>

    <style name="ToolTipAltTextStyle" parent="ToolTipTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

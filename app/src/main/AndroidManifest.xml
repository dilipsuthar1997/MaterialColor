<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.techflow.materialcolor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- <uses-permission android:name="com.android.vending.BILLING"/> -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name=".MaterialColor"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/MaterialColor.Base.Light">
        <activity
                android:name=".activity.LicensesActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.AppIntroActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.MetroColorsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.SocialColorsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.FlatUIColorsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.SupportDevelopmentActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.DesignToolActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.CustomGradientActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.SettingsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.ColorActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.CustomColorActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".activity.HomeActivity"
                android:screenOrientation="portrait" />
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Image crop activity -->
        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Base.Theme.AppCompat" />

        <!-- Fonts meta-data -->
        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
    </application>

</manifest>